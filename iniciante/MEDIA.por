programa {
  funcao inicio() {
    //Declaração de variáveis
    real n1, n2, n3, n4, media

    //Entrada 
    escreva("Digite a sua idade : ")
    leia (n1)
    escreva ("Digite a sua idade: ")
    leia(n2)
    escreva ("Digite a sua idade: ")
    leia (n3)
    escreva ("Digite a sua idade: ")
    leia(n4)

    //Processamento 
    media = (n1 + n2 + n3 + n4) /4

    //saida
    escreva ("A media é: ", media)
  }
}

